<% layout('/layouts/boilerplate') -%> 


<div class="row">
    <h2 class=" h2 col-6 offset-4 mb-3 ">Login </h2>

    <div class="col-4 offset-4">
        <form
          action="/login"
          method="post"
          novalidate
          class="needs-validation"
        >
          <div class="med-3">
            <label for="username">Username</label>
            <input
              type="text"
              name="username"
              id="username"
              class="form-control"
              required
            />
          </div>

          <div class="med-3 mt-2">
            <label for="password">Password</label>
            <input
              type="password"
              name="password"
              id="password"
              class="form-control"
              required
            />
          </div>
          <br>
          <button class="btn btn-success">LogIn</button>
          &nbsp;<button class="btn btn-primary"><a id="signup-link" href="/signup">SignUp</a></button>
        </form>

    </div>
</div>


