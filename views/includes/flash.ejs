
<% if (typeof success !== 'undefined' && success.length) { %>
    <div class="row mt-5">
        <div class="alert alert-success alert-dismissible fade show mt-3 mb-0 col-4 offset-4" id="flash-msg" role="alert">
            <%= success %> 
            <button  type="button" id="flash-btn" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
    
<% } %>

<% if (typeof error !== 'undefined' && error.length) { %>
    <div class="row mt-5">
        <div class="alert alert-danger alert-dismissible fade show mt-3 mb-0 col-4 offset-4" id="flash-msg" role="alert">
            <%= error %> 
            <button  type="button" id="flash-btn" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
    
<% } %>

