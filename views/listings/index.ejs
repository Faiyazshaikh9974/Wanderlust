<% layout('/layouts/boilerplate') -%>


<body>
    <h2 style="margin-bottom: 1.2rem; margin-top: 0rem; margin-left: 0.7rem;">All Listings</h2>

    <!-- <form action="/listing/new">
        <button type="submit">Create New Listing</button>
    </form> -->
    

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sl-1 row-cols-xl-4 res-card">
        
        <% for (let list of listings) { %>
        <a href="/listings/<%=list._id%>" class="link">
            <div class="listing-card col" style="width: 18rem;">
             <img src="<%=list.image.url%>" class="card-img-top" alt="Listing">
             <div class="card-body">
               <b><p style="color: black;" class="card-text"><%= list.title%> </b> <br>
                 &#8377; <%= list.price.toLocaleString("en-IN") %> / night <br>
             </p>
             </div>
           </div>
        </a>
         <%} %>

    </div>
    


  
</body>
